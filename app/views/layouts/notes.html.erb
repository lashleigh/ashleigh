<!DOCTYPE html>
<html>
<head>
  <title>Ashleigh</title>
  <%= javascript_include_tag "jquery-1.4.4.min", "jquery-ui-1.8.7.custom.min", "jquery.rails.js" %>
  <%= javascript_include_tag 'prettify/prettify' %>
  <%= javascript_include_tag 'note'%>
  <%= javascript_include_tag 'jquery.livequery'%>

  <%= stylesheet_link_tag 'notes' %>
  <%= stylesheet_link_tag 'prettify' %>
  <%= stylesheet_link_tag 'jquery-ui-1.8.7.custom' %>
  <link rel="alternate stylesheet" type="text/css" title="orange"
    href="/stylesheets/orange.css">
  <link rel="alternate stylesheet" type="text/css" title="pink"
    href="/stylesheets/pink.css">
 
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="content">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </div>
</body>
</html>
